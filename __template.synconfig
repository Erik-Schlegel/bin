# The path to the local "from" directory to sync with the remote "to" directory.
LOCAL_DIR="/home/<user>/<path>/"
REMOTE_DIR="/home/<user>/<path>/"

# Any files or directories to exclude from the sync. This will leave them untouched on the remote server.
EXCLUSIONS=".gitignore *.md LICENSE documentation/ node_modules/ venv/ .git/"

# Credentials for the remote server.
REMOTE_HOST="<ip_address>"
REMOTE_USER="<user>"
REMOTE_PASSWORD="<password>"